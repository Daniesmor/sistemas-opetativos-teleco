que pasa si no existe el fichero

que pasa si ya existe el fichero que queremos crear


switch (file_pid = fork()) {
        case -1:
            err(EXIT_FAILURE, "fork failed");
            break;
        case 0:
            int exists = open(line, READ_PERMISSION);
            file_exist_check(exists); // SI EL ARCHIVO QUE SE DESEA ENCRIPTAR NO EXISTE SE ESCRIBIRA ERROR POR LA SALIDA
            
            // SI EXISTE SE ESCRIBIRÁ POR LA SALIDA EL SHA DEL ARCHIVO
            if (exists >= 0) { 
                execl("/bin/sha1sum", line, NULL); //execl debe recibir un puntero que apunte a donde está el argumento
                err(EXIT_FAILURE, "exec failed");
            }
            close(exists);
            break;
        default:
            int child_status;
            wait(&child_status);
            /*
            EN EL MOMENTO DE QUE HALLA UN ERROR PORQUE NO EXISTA UN
            ARCHIVO EL 1 SERÁ PERMANENTE AUNUQUE LOS ARCHIVOS DE DESPUES SI EXISTAN
            
            */
            printf("este es el valir de status %d", *status);
            printf("este es el estado %d", WEXITSTATUS(child_status));
            if (WEXITSTATUS(child_status) != 0) { 
                *status = WEXITSTATUS(child_status);
            }
	}



